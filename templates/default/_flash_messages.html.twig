
{% if app.request.hasPreviousSession %}
    <style>
        .flashes-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .flashes-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .flashes-wrapper code.info { color: #0c5460; background-color: #d1ecf1; border-color: #bee5eb; }
        .flashes-wrapper code.success { color: #155724; background-color: #d4edda; border-color: #c3e6cb; }
        .flashes-wrapper code.warning { color: #856404; background-color: #fff3cd; border-color: #ffeeba; }
        .flashes-wrapper code.error { color: #721c24; background-color: #f8d7da; border-color: #f5c6cb; }
    </style>
    {% for type, messages in app.flashes %}
        <div class="flashes-wrapper">
            {% for message in messages %}
                <code class="{{ type }}">{{ message }}</code>
            {% endfor %}
        </div>
    {% endfor %}
{% endif %}