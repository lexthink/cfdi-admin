{
    "name": "lexthink/cfdi-admin",
    "description": "Aplicación web para el almacenamiento y gestión de CFDIs",
    "type": "project",
    "keywords": ["lexthink", "cfdi", "admin"],
    "homepage": "https://github.com/lexthink/cfdi-admin",
    "license": "MIT",
    "authors": [
        {
            "name": "Manuel Alejandro Paz Cetina",
            "email": "lexthink@icloud.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "sensio/framework-extra-bundle": "^5.6",
        "symfony/asset": "^5.1",
        "symfony/console": "^5.1",
        "symfony/dotenv": "^5.1",
        "symfony/expression-language": "^5.1",
        "symfony/flex": "^1.9",
        "symfony/form": "^5.1",
        "symfony/framework-bundle": "^5.1",
        "symfony/mailer": "^5.1",
        "symfony/messenger": "^5.1",
        "symfony/monolog-bundle": "^3.5",
        "symfony/options-resolver": "^5.1",
        "symfony/orm-pack": "^2.0",
        "symfony/security-bundle": "^5.1",
        "symfony/serializer": "^5.1",
        "symfony/stopwatch": "^5.1",
        "symfony/translation": "^5.1",
        "symfony/twig-pack": "^1.0",
        "symfony/uid": "^5.1",
        "symfony/validator": "^5.1",
        "symfony/yaml": "^5.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpstan/phpstan": "^0.12",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/debug-pack": "^1.0",
        "symfony/profiler-pack": "^1.0",
        "symfony/test-pack": "^1.0"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "CfdiAdmin\\Account\\": "module/account/src/",
            "CfdiAdmin\\Authentication\\": "module/authentication/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/",
            "CfdiAdmin\\Account\\Tests\\": "module/account/tests/",
            "CfdiAdmin\\Authentication\\Tests\\": "module/authentication/tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "scripts": {
        "dev:build": [
            "@dev:check-style",
            "@dev:phpstan",
            "@dev:tests"
        ],
        "dev:check-style": [
            "vendor/bin/php-cs-fixer fix --ansi --dry-run --verbose",
            "vendor/bin/phpcs"
        ],
        "dev:fix-style": [
            "vendor/bin/php-cs-fixer fix --ansi --verbose",
            "vendor/bin/phpcbf"
        ],
        "dev:phpstan": "vendor/bin/phpstan analyze --memory-limit=-1 --ansi --verbose --no-progress",
        "dev:tests": "bin/phpunit --testdox --stop-on-failure --colors=always --verbose"
    },
    "scripts-descriptions": {
        "dev:build": "DEV: run dev:check-style, dev:phpstan and dev:tests",
        "dev:check-style": "DEV: search for code style errors using php-cs-fixer and phpcs",
        "dev:fix-style": "DEV: fix code style errors using php-cs-fixer and phpcbf",
        "dev:phpstan": "DEV: run php static analysis",
        "dev:tests": "DEV: run phpunit tests"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.1.*"
        }
    }
}
